<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>veil.hdp.hive</groupId>
    <artifactId>hive-jdbc</artifactId>
    <version>1.0-SNAPSHOT</version>

    <name>Hive JDBC Driver</name>
    <packaging>pom</packaging>

    <modules>
        <module>driver-binary</module>
        <module>driver-http</module>
        <module>driver-binary-zookeeper</module>
        <module>driver-http-zookeeper</module>
        <module>core-thrift</module>
        <module>core</module>
        <module>utils-binary</module>
        <module>utils-http</module>
        <module>utils-zookeeper</module>
        <module>test-original-driver</module>
        <module>test-tools</module>
    </modules>

    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <junit.version>4.12</junit.version>
        <slf4j.version>1.7.25</slf4j.version>
        <guava.version>21.0</guava.version>
        <commons-lang3.version>3.5</commons-lang3.version>
        <curator.version>2.12.0</curator.version>
        <http.version>4.5.3</http.version>
        <metrics.version>3.2.2</metrics.version>
    </properties>

    <profiles>
        <profile>
            <id>HDP-2.1.0.2.6.0.3-8</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <hive.version>2.1.0.2.6.0.3-8</hive.version>
            </properties>
        </profile>
        <profile>
            <id>HDP-1.2.1000.2.6.0.3-8</id>
            <properties>
                <hive.version>1.2.1000.2.6.0.3-8</hive.version>
            </properties>
        </profile>
        <profile>
            <id>HDP-1.2.1000.2.5.3.0-37</id>
            <properties>
                <hive.version>1.2.1000.2.5.3.0-37</hive.version>
            </properties>
        </profile>
    </profiles>

    <repositories>
        <repository>
            <id>hwx-releases</id>
            <url>http://repo.hortonworks.com/content/repositories/releases/</url>
        </repository>
        <repository>
            <id>hwx-public</id>
            <url>http://repo.hortonworks.com/content/groups/public/</url>
        </repository>
    </repositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.0.1</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


</project>