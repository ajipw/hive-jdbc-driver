<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>veil.hdp.hive</groupId>
    <artifactId>hive-jdbc</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>

    <modules>
        <module>binary-driver</module>
        <module>http-driver</module>
        <module>binary-zookeeper-driver</module>
        <module>http-zookeeper-driver</module>

        <module>thrift-client</module>
        <module>common</module>

        <module>binary-utils</module>
        <module>http-utils</module>
        <module>zookeeper-utils</module>
    </modules>

    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <slf4j.version>1.7.21</slf4j.version>
        <hive.version>1.2.1000.2.5.3.0-37</hive.version>
        <hadoop.version>2.7.3.2.5.3.0-37</hadoop.version>
        <libthrift.version>0.10.0</libthrift.version>
        <junit.version>4.12</junit.version>
        <curator.version>2.12.0</curator.version>
    </properties>

    <repositories>
        <repository>
            <id>hwx-releases</id>
            <url>http://repo.hortonworks.com/content/repositories/releases/</url>
        </repository>
        <repository>
            <id>hwx-public</id>
            <url>http://repo.hortonworks.com/content/groups/public/</url>
        </repository>
    </repositories>


</project>